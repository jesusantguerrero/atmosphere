{
    "private": true,
    "engines": {
        "node": ">=20.9.0"
    },
    "scripts": {
        "dev": "vite",
        "prod": "vite build",
        "build": "vite build",
        "local:setup": "php artisan migrate:fresh --force --seed",
        "local:setup-demo": "npm run local:setup && php artisan app:demo-seed",
        "local:demo": "php artisan demo:seed",
        "docker:build": "docker compose build",
        "docker:up-dev": "docker compose -f docker-compose.dev.yml up -d",
        "docker:down-dev": "docker compose -f docker-compose.dev.yml down",
        "docker:up": "docker compose up -d",
        "down": "docker compose down",
        "docker:install": "docker compose exec -T web composer install --ignore-platform-reqs",
        "docker:update": "docker compose exec web composer update --ignore-platform-reqs",
        "docker:generate": "docker compose exec -T web php artisan key:generate",
        "docker:migrate": "docker compose exec web php artisan migrate",
        "docker:schedule": "docker compose exec web php artisan schedule:work",
        "docker:seed": "docker compose exec web php artisan db:seed",
        "docker:set-accounts": "docker compose exec web php artisan journal:set-accounts",
        "docker:artisan": "docker compose exec web php artisan",
        "docker:dev": "npm run docker:up-dev && npm run docker:install && npm run docker:migrate && npm run docker:seed && npm run docker:set-accounts",
        "docker:setup": "npm run docker:up && npm run docker:install && npm run docker:migrate && npm run docker:seed && npm run docker:set-accounts",
        "start": "npm run docker:up",
        "build:digitalocean": "npm install && npm run build"
    },
